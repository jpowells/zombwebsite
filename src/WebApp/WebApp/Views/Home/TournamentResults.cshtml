
@{
    ViewData["Title"] = "Tournament Results";
}

<script src='https://cdnjs.cloudflare.com/ajax/libs/tabletop.js/1.5.1/tabletop.min.js'></script>
<script src='~/js/TournamentResults.js'></script>

<h2>@ViewData["Title"]</h2>

<h3>Majors</h3>
<table style="width:100%">
    <thead>
    <tr>
        <th onclick="sortTournamentTable('Tournament','Major','string')">Tournament</th>
        <th onclick="sortTournamentTable('Game','Major','string')">Game</th>
        <th onclick="sortTournamentTable('Placement','Major','number')">Placement</th>
        <th onclick="sortTournamentTable('Date','Major','date')">Date</th>
    </tr>
    </thead>
    <tbody id="Major"/>
</table>

<h3>Locals</h3>
<table style="width:100%">
    <thead>
        <tr>
            <th onclick="sortTournamentTable('Tournament','Local','string')">Tournament</th>
            <th onclick="sortTournamentTable('Game','Local','string')">Game</th>
            <th onclick="sortTournamentTable('Placement','Local','number')">Placement</th>
            <th onclick="sortTournamentTable('Date','Local','date')">Date</th>
        </tr>
    </thead>
    <tbody id="Local" />
</table>